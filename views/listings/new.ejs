<% layout("/layouts/boilerplate") %>
        <br>
    <div class="row">
        <div class="col-8 offset-2">
            <h1>Create a New Listing</h1>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <form method="POST" action="/listings">
        <div class="mb-3">    
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control"
        required>
        <div class="valid-feedback">Title Looks Good!!</div>
        <div class="invalid-feedback">Enter a Title!!</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter Description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please Enter a Valid Description!!</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" class="form-control" class="form-control" type="file" required>            
        </div>

        <div class="row">

            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" class="form-control" placeholder="â‚¹1,200" required>
                <div class="invalid-feedback">Please Enter Valid Price!!</div>
            </div>

            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" class="form-control" placeholder="India" type="text" required>
                <div class="invalid-feedback">Please Enter a Valid Country!!</div>

            </div>

        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" class="form-control" placeholder="Dwarka, Gujarat" class="form-control" type="text" required>
            <div class="invalid-feedback">Please Enter a Valid Location!!</div>
        </div>

        <button class="btn btn-dark edit-btn">Add</button>
        <br><br>
    </form>
    </div>
</div>